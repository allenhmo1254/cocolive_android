<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhongjie3.com.cocolive.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_home_tab_bar_height">
        <android.support.design.widget.TabLayout
            android:id="@+id/home_tabbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fragment_home_tab_bar_margin_left"
            android:layout_marginRight="@dimen/fragment_home_tab_bar_margin_left"
            app:tabGravity="fill"
            app:tabMode="fixed" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
